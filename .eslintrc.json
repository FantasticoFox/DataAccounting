{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/mediawiki",
		"wikimedia/jquery"
	],
	"env": {
		"browser": true,
		"es6": true
	},
	"parserOptions": {
        "ecmaVersion": 2017
    },
	"rules": {
		"no-jquery/no-parse-html-literal": "warn",
		"no-jquery/no-global-selector": "warn",
		"mediawiki/msg-doc": "warn",
		"semi": ["error", "never"]
	}
}
