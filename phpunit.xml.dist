<phpunit colors="true">
  <testsuites>
    <testsuite name="unit">
      <directory>tests/phpunit/unit</directory>
    </testsuite>
    <testsuite name="integration">
      <directory>tests/phpunit/integration</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">includes</directory>
    </whitelist>
  </filter>
</phpunit>
